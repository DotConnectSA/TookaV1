<script type="text/javascript">
    var showCount=5;    //you should change this number
    var num=5 / showCount;
    num=Math.ceil(num);
    var navIndex;

    $(document).ready(
	function()
	{
	    for(i=1;i<=5;i++)
	    {
	        $("#div" + i).hide();
	        //alert(i);
	    }
	    for(i=1;i<=showCount;i++)
	    {
	        $("#div" + i).show();
	        //alert(i);
	    }


	    for(i=num;i>=1;i--)
	    {

	        $("#nav").append( "<a id='nav"+i+"' onclick='alter("+i+")' style='cursor: pointer;color:gray;padding:5px;'>"+i+"</a>");

	    }
	    navIndex=1;
	    $("#prevbtn").addClass("active");
	    if (navIndex+1>num)
	        $("#nextbtn").addClass("active");
	    $("#nav"+navIndex).css("color","blue");
	}
	);

    function alter(index)
    {
        for (i = 1; i <= 5; i++)
        {
            $("#div" + i).hide();
        }
        for(i=showCount*(index-1)+1;i<=showCount*(index-1)+showCount;i++)
        {
            $("#div" + i).show();
        }
        for (i=1;i<=num;i++)
        {
            $("#nav"+i).css("color","gray");
        }
        $("#nav"+index).css("color","blue");
        navIndex = index;
        $("#prevbtn").removeClass("active");
        $("#nextbtn").removeClass("active");
        if (navIndex == num) {
            $("#nextbtn").addClass("active");
        }
        if (navIndex == 1) {
            $("#prevbtn").addClass("active");
        }
    }

    function prev()
    {
        if(navIndex-1>0)
        {
            if(navIndex-1==1)
            {
                $("#prevbtn").addClass("active");
            }
            $("#nextbtn").removeClass("active");
            alter(navIndex-1);
        }
    }

    function next()
    {
        if(navIndex+1<=num)
        {
            if (navIndex+1==num)
            {
                $("#nextbtn").addClass("active");
            }
            $("#prevbtn").removeClass("active");
            alter(navIndex+1);
        }
    }
</script>
