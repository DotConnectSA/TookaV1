@model IEnumerable<RealEstateV1.Models.T_Discuss>

@{
    ViewBag.Title = "Discuss";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Html.Partial("_SearchBar", new RealEstateV1.Busniss.SearchItem())

<h2>إستشارات عقارية</h2>

<div id="container">
    <div class="row">
        <div class="list col-lg-9 col-sm-7">
            <hr />
            <ul>
                @if (Model == null)
                {
                    <li id="div1">
                        لايوجد بيانات
                    </li>
                }
                else
                {
                    int counter = 1;
                    foreach (var item in Model)
                    {
                        @Html.Partial("_DiscussPartial", item, new ViewDataDictionary { { "index", @counter } });
                        counter = counter + 1;
                    }
                }
            </ul>

            <div style="text-align: center;">
                <button id="prevbtn" type="button" onclick="prev()" class="btn btn-default">السابق</button>
                <span id="nav"></span>
                <a id="nextbtn" onclick="next()" class="btn btn-default">التالي</a>
            </div>

        </div>


        <aside class="left-col list col-lg-3 col-sm-5">
            <a onclick="dig()" class="btn wide">إضافة موضوع</a>
            <div class="block ads">

                <div class="content">
                    <a href="#">
                        <img src="@Url.Content("~/Content/images/ad1.jpg")" />
                    </a>
                </div>
            </div>
            <div class="block ads">

                <div class="content">
                    <a href="#">
                        <img src="@Url.Content("~/Content/images/ad2.jpg")" />
                    </a>
                </div>
            </div>

            <div class="block blue">
                <h3>عقارات قريبة</h3>
                <div class="content">
                    <ul>
                        @for (int i = 0; i < 2; i++)
                        {
                            @Html.Partial("_miniRE")
                        }
                    </ul>
                </div>
            </div>


        </aside>
        <div class="clear"></div>

    </div>
</div>

<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-sm">
        <div class="modal-content" style="margin-top:100px">
            <div class="modal-header">
                @*<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>*@
                <h4 class="modal-title" id="myModalLabel">إضافة موضوع</h4>
            </div>
            <div class="modal-body">
                @Html.Partial("_AskDiscuss")
            </div>
            @*<div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary">Save changes</button>
                </div>*@
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

<script type="text/javascript">
    var showCount=2;    //you should change this number
    var num=@Model.Count() / showCount;
    num=Math.ceil(num);
    var navIndex;

    $(document).ready(
	function()
	{
	    for(i=1;i<=@Model.Count();i++)
	    {
	        $("#div" + i).hide();
	        //alert(i);
	    }
	    for(i=1;i<=showCount;i++)
	    {
	        $("#div" + i).show();
	        //alert(i);
	    }


	    for(i=num;i>=1;i--)
	    {

	        $("#nav").append( "<a id='nav"+i+"' onclick='alter("+i+")' style='cursor: pointer;color:gray;padding:5px;'>"+i+"</a>");

	    }
	    navIndex=1;
	    $("#prevbtn").addClass("active");
	    if (navIndex+1>num)
	        $("#nextbtn").addClass("active");
	    $("#nav"+navIndex).css("color","blue");
	}
	);

    function alter(index)
    {
        for(i=1;i<=@Model.Count();i++)
        {
            $("#div" + i).hide();
        }
        for(i=showCount*(index-1)+1;i<=showCount*(index-1)+showCount;i++)
        {
            $("#div" + i).show();
        }
        for (i=1;i<=num;i++)
        {
            $("#nav"+i).css("color","gray");
        }
        $("#nav"+index).css("color","blue");
        navIndex=index;
    }

    function prev()
    {
        if(navIndex-1>0)
        {
            if(navIndex-1==1)
            {
                $("#prevbtn").addClass("active");
            }
            $("#nextbtn").removeClass("active");
            alter(navIndex-1);
        }
    }

    function next()
    {
        if(navIndex+1<=num)
        {
            if (navIndex+1==num)
            {
                $("#nextbtn").addClass("active");
            }
            $("#prevbtn").removeClass("active");
            alter(navIndex+1);
        }
    }
</script>


